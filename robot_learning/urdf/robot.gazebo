<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
	<xacro:property name="wm1" value="10.0"/>
	<xacro:property name="wm2" value="5.0"/>
	<xacro:property name="wkp" value="1e9"/>
	<xacro:property name="wkd" value="2e5"/>
	<xacro:property name="wmd" value="1e-2"/>

	<gazebo>
		<plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
			<legacyMode>false</legacyMode>
			<alwaysOn>true</alwaysOn>
			<updateRate>30</updateRate>
			<leftJoint>left_wheel_joint</leftJoint>
			<rightJoint>right_wheel_joint</rightJoint>

			<!-- basic form -->
			<!--
			<wheelSeparation>0.3</wheelSeparation>
			<wheelDiameter>0.2</wheelDiameter> 
			-->

			<!-- apply odom correction, see calibration.launch -->
			<!--
			<wheelSeparation>0.3</wheelSeparation>
			<wheelDiameter>${0.2 * 0.859}</wheelDiameter>
			-->

			<!-- apply odom correction, see cmd_calib.py -->
			<wheelSeparation>0.3</wheelSeparation>
			<wheelDiameter>0.1</wheelDiameter>

			<torque>1000</torque>
			<commandTopic>cmd_vel</commandTopic>
			<odometryTopic>odom</odometryTopic>
			<odometryFrame>odom</odometryFrame>
			<robotBaseFrame>base_link</robotBaseFrame>

			<rosDebugLevel>na</rosDebugLevel>
			<publishWheelTF>false</publishWheelTF>
			<publishWheelJointState>true</publishWheelJointState>
			<wheelAcceleration>1.8</wheelAcceleration>
			<wheelTorque>1000</wheelTorque>
			<odometrySource>world</odometrySource>
		</plugin>
	</gazebo>

	<gazebo reference="camera">
		<material>Gazebo/Green</material>
		<sensor type="camera" name="camera1">
			<update_rate>30.0</update_rate>
			<camera name="head">
                <!-- 2.0 * arctan(640.0 / (2 * 499.114583)) -->
                <horizontal_fov>1.1402364262926776</horizontal_fov> <!-- 65.3' -->
				<image>
					<width>640</width>
					<height>480</height>
					<format>R8G8B8</format>
				</image>
				<clip>
					<near>0.02</near>
					<far>300</far>
				</clip>
			</camera>
			<plugin name="camera_controller" filename="libgazebo_ros_camera.so">
				<alwaysOn>true</alwaysOn>
				<updateRate>30.0</updateRate>
				<cameraName>camera</cameraName>
				<imageTopicName>image_raw</imageTopicName>
				<cameraInfoTopicName>camera_info</cameraInfoTopicName>
				<frameName>camera_optical</frameName>
                <!--<hackBaseline>0.07</hackBaseline>-->
                <Cx>325.589216</Cx>
                <Cy>238.001597</Cy>
				<distortionK1>0.158661</distortionK1>
				<distortionK2>-0.249478</distortionK2>
				<distortionT1>-0.000564</distortionT1>
				<distortionT2>0.000157</distortionT2>
				<distortionK3>0.0</distortionK3>
			</plugin>
		</sensor>
	</gazebo>

	<!-- hokuyo -->
	<gazebo reference="base_laser_link">
		<sensor type="ray" name="head_hokuyo_sensor">
			<pose>0 0 0 0 0 0</pose>
			<visualize>false</visualize>
			<update_rate>5.0</update_rate>
			<ray>
				<scan>
					<horizontal>
						<samples>361</samples>
						<resolution>1</resolution>
						<min_angle>-3.14</min_angle>
						<max_angle>3.14</max_angle>
					</horizontal>
				</scan>
				<range>
					<min>0.2</min>
					<max>5.0</max>
					<resolution>0.01</resolution>
				</range>
				<noise>
					<type>gaussian</type>
					<!-- Noise parameters based on published spec for Hokuyo laser
						 achieving "+-30mm" accuracy at range < 10m.  A mean of 0.0m and
						 stddev of 0.01m will put 99.7% of samples within 0.03m of the true
						 reading. -->
					<mean>0.0</mean>
					<stddev>0.01</stddev>
				</noise>
			</ray>
			<plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
				<topicName>/scan</topicName>
				<frameName>base_laser_link</frameName>
			</plugin>
		</sensor>
	</gazebo>

	<gazebo>
		<plugin name="ground_truth_p3d" filename="libgazebo_ros_p3d.so">
			<alwaysOn>true</alwaysOn>
			<updateRate>100.0</updateRate>
			<bodyName>base_link</bodyName>
			<topicName>ground_truth_pose</topicName>
			<gaussianNoise>0.0</gaussianNoise>
			<frameName>map</frameName>
		</plugin>
	</gazebo>

	<gazebo reference="left_wheel_link">
		<material>Gazebo/Grey</material>
		<mu1 value="${wm1}"/>
		<mu2 value="${wm2}"/>
		<kp value="${wkp}" />
		<kd value="${wkd}" />
		<fdir1 value="1 0 0"/>
		<!--<minDepth value="${wmd}"/>-->
		<maxVel value="0"/>
		<!--<maxContacts>1</maxContacts>-->
	</gazebo>
	<gazebo reference="right_wheel_link">
		<material>Gazebo/Grey</material>
		<mu1 value="${wm1}"/>
		<mu2 value="${wm2}"/>
		<kp value="${wkp}" />
		<kd value="${wkd}" />
		<fdir1 value="1 0 0"/>
		<!--<minDepth value="${wmd}"/>-->
		<maxVel value="0"/>
		<!--<maxContacts>1</maxContacts>-->
	</gazebo>
	<gazebo reference="chassis">
		<material>Gazebo/Yellow</material>
		<mu1 value="0.0"/>
		<mu2 value="0.0"/>
		<kp value="1e9" />
		<kd value="2e5" />
		<!--<fdir1 value="1 0 0"/>-->
		<!--<minDepth value="${wmd/2}"/>-->
		<!--<maxContacts>0</maxContacts>-->
	</gazebo>

</robot>
